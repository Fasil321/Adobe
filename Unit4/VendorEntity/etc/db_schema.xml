<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table name="vendor_entity" resource="default" engine="innodb" comment="Vendor entity table">
		<column xsi:type="int" name="vendor_id" padding="10" unsigned="true" nullable="false" identity="true" comment="vendor id" />
		<column xsi:type="text" name="code" nullable="false" comment="code" />
		<column xsi:type="text" name="contact" nullable="false" comment="contact" />
		<constraint xsi:type="primary" referenceId="PRIMARY">
			<column name="vendor_id" />
		</constraint>
	</table>
</schema>